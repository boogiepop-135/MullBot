<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Müllblue CRM - Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/public/css/admin.css">
</head>

<body>
  <div class="login-container">

    <!-- Card de Login -->
    <div class="login-card">

      <!-- Logo -->
      <div class="flex justify-center mb-6">
        <div class="logo-container">
          <img src="/public/Logo_cara.png" alt="MüllBot">
        </div>
      </div>

      <!-- Título -->
      <div class="login-title">
        <h1>Müllblue</h1>
        <p>
          <i class="fas fa-leaf mr-2"></i>
          Portal de Administración
        </p>
        <div class="divider"></div>
      </div>

      <!-- Formulario -->
      <form id="login-form">

        <!-- Usuario -->
        <div class="input-group">
          <label>
            <i class="fas fa-user mr-2"></i>Usuario
          </label>
          <input
            type="text"
            id="username"
            name="username"
            required
            class="input-simple"
            placeholder="Tu nombre de usuario">
        </div>

        <!-- Contraseña -->
        <div class="input-group">
          <label>
            <i class="fas fa-lock mr-2"></i>Contraseña
          </label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="input-simple"
            placeholder="Tu contraseña">
        </div>

        <!-- Botón -->
        <button type="submit" class="btn-simple">
          <i class="fas fa-sign-in-alt mr-2"></i>
          Iniciar Sesión
        </button>

        <!-- Error -->
        <div id="error-message" class="error-message hidden"></div>
      </form>

      <!-- Footer -->
      <div class="login-footer">
        <div class="security-info">
          <i class="fas fa-shield-alt"></i>
          <span>Sistema Seguro</span>
          <span>•</span>
          <i class="fas fa-leaf"></i>
          <span>Gestión Sostenible</span>
        </div>
        <p class="copyright">
          MüllBot © 2025 - Tecnología Verde
        </p>
      </div>

    </div>
  </div>

  <script>
    document.getElementById('login-form').addEventListener('submit', async function(e) {
      e.preventDefault();

      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;
      const errorElement = document.getElementById('error-message');
      const submitButton = e.target.querySelector('button[type="submit"]');

      // Loading state
      submitButton.disabled = true;
      submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Autenticando...';

      try {
        const response = await fetch('/crm/auth/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username, password })
        });

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.error || 'Error de autenticación');
        }

        const { token } = await response.json();
        localStorage.setItem('token', token);

        // Success state
        submitButton.innerHTML = '<i class="fas fa-check-circle mr-2"></i>¡Bienvenido!';

        setTimeout(() => {
          window.location.href = '/admin';
        }, 500);

      } catch (error) {
        errorElement.innerHTML = `
          <i class="fas fa-exclamation-triangle mr-2"></i>
          ${error.message}
        `;
        errorElement.classList.remove('hidden');

        // Reset button
        submitButton.disabled = false;
        submitButton.innerHTML = '<i class="fas fa-sign-in-alt mr-2"></i>Iniciar Sesión';

        setTimeout(() => {
          errorElement.classList.add('hidden');
        }, 4000);
      }
    });
  </script>

</body>
</html>
