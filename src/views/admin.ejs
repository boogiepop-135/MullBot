    /* Sidebar Styles */
    .sidebar {
      width: var(--sidebar-width);
      transition: all 0.3s ease;
    }

    .nav-item.active {
      background-color: #eef2ff;
      color: var(--primary);
      border-right: 3px solid var(--primary);
    }

    /* Main Content Styles */
    .main-content {
      margin-left: var(--sidebar-width);
      min-height: 100vh;
    }

    /* Custom Scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }

    ::-webkit-scrollbar-track {
      background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
      background: #c7c7c7;
      border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #a8a8a8;
    }

    /* Badge Styles */
    .badge {
      font-size: 0.75rem;
      padding: 0.25rem 0.6rem;
      border-radius: 9999px;
      font-weight: 500;
    }

    .badge-sent {
      background-color: #d1fae5;
      color: #065f46;
    }

    .badge-scheduled {
      background-color: #dbeafe;
      color: #1e40af;
    }

    .badge-failed {
      background-color: #fee2e2;
      color: #991b1b;
    }

    .badge-draft {
      background-color: #f3f4f6;
      color: #1f2937;
    }

    /* WhatsApp Message Styles */
    .whatsapp-message {
      position: relative;
      background-color: #dcf8c6;
      padding: 10px 15px;
      border-radius: 7.5px;
      box-shadow: 0 1px 0.5px rgba(0, 0, 0, 0.13);
    }

    .whatsapp-message::after {
      content: "";
      position: absolute;
      left: -8px;
      top: 10px;
      width: 0;
      height: 0;
      border-top: 8px solid transparent;
      border-bottom: 8px solid transparent;
      border-right: 8px solid #dcf8c6;
    }
  </style>
</head>

