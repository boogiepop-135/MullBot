    }

    #chat-modal .border-gray-200,
    #edit-content-modal .border-gray-200,
    #status-modal .border-gray-200,
    #product-modal .border-gray-200,
    #template-modal .border-gray-200,
    #create-user-modal .border-gray-200,
    #bot-content-modal .border-gray-200 {
      border-color: var(--border-color) !important;
    }

    /* Global text color adjustments */
    .text-gray-500 {
      color: var(--text-secondary) !important;
    }

    label {
      color: var(--text-primary) !important;
    }

    .settings-tab {
      color: var(--text-secondary) !important;
